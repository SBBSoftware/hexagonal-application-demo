<% content_for :titles do %>
  Inventory List
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Id</th>
    <th>Sku</th>
    <th>Name</th>
    <th>Stock</th>
    <th>Reorder</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @inventories.each do |inventory| %>
    <tr>
      <td><%= inventory.id %></td>
      <td><%= inventory.sku %></td>
      <td><%= inventory.name %></td>
      <td><%= inventory.stock %></td>
      <% if inventory.reorder_stock? %>
        <td><%= link_to 'Reorder', reorder_inventory_path(inventory), method: :patch %></td>
      <% elsif inventory.reorder_date %>
        <td><%= inventory.reorder_date %></td>
      <% else %>
      <td></td>
      <% end %>
      <td><%= link_to 'Show', inventory %></td>
      <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
      <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_inventory_path %>
